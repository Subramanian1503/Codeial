<link rel="stylesheet" href="/css/user_profile.css" />
<h1>Codeial / Profile Page</h1>

<% if(user.id == requested_user.id) {%>
<form action="users/update/<%= requested_user.id %>" method="post">
  <input
    type="text"
    placeholder="Add your name"
    name="name"
    value=<%= requested_user.name%>
    required
  />
  <input
    type="text"
    placeholder="Add your emailId"
    name="email"
    value=<%= requested_user.email%>
    required
  />
  <input type="submit" value="Update" />
</form>
<% } else {%>

<p><%= requested_user.name %></p>
<p><%= requested_user.email %></p>

<%}%>
